<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        body, html {
            font-family: 'Roboto', sans-serif;
            font-size: large;
            line-height: normal;
            width: 100%;
            height: 100%;
            background-color: #E9EAED;
        }

        ul {
            list-style-type: none;
        }

        .center {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            height: 100%;
            width: 100%;
        }

        .tree-panel {
            background-color: #FFFFFF;
            width: max-content;
            padding: 2%;
            box-shadow: 0 0 10px 1px #C9C9C9;
            border-radius: .25rem;
        }

        .header {
            text-align: center;
            padding-bottom: inherit;
            margin-bottom: revert;
        }

        .input-group {
            display: flex;
            width: 100%;
            padding-top: inherit;
            flex-direction: row;
        }

        .input-group-button {
            padding: 0.375rem 0.75rem;
            border: 1px solid #0275d8;
            border-radius: 0 .25rem .25rem 0;
            cursor: pointer;
            margin-top: 1%;
            margin-bottom: 1%;
            width: 10%;
        }

        .input-group-button:hover {
            background-color: #025aa5;
            border-color: #01549b;
        }

        .input-group-button:active {
            background-color: #014682;
            border-color: #01315a;
        }

        .output-group{
            display:inline-block;

        }

        .output-group-list{
            width: 400px;
            box-sizing: border-box;
            overflow-x: auto;
            height: 200px;
            margin-right: 2px;
        }
        .output-group-list-tree{
            width: 400px;
            box-sizing: border-box;
            overflow-x: auto;
            overflow-y: auto;
            border: 0.1rem solid;
            height: 200px;
        }
    </ui:style>

    <g:HTMLPanel addStyleNames="{style.center}">
        <div class="{style.tree-panel}">
            <h1 class="{style.header}">Tree</h1>

            <g:FormPanel ui:field="form"/>

            <g:VerticalPanel ui:field="panel"/>

            <div class="{style.input-group}">
                <g:FileUpload ui:field="fileUpload"/>
                <g:PushButton ui:field="uploadButton" addStyleNames="{style.input-group-button}">Загрузить файл</g:PushButton>
            </div>

            <g:HorizontalPanel ui:field="listPanel"/>
            <div class="{style.output-group}">
                <span><g:ListBox ui:field="listBox" addStyleNames="{style.output-group-list}"/></span>
                <span><g:Tree ui:field="tree" addStyleNames="{style.output-group-list-tree}"/></span>
                <g:PushButton ui:field="addTreeItem">-></g:PushButton>
                <g:PushButton ui:field="createTreeDir">Создать папку</g:PushButton>
                <g:TextArea ui:field="dirName"/>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>